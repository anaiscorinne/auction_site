<h1>List a new product!</h1>
<ul>
	<% if @product.errors.any?  %>
		<% @product.errors.full_messages.each do |error_message| %>
			<li><%= error_message %></li>
		<% end %>
	<% end %>
</ul>

<h3>Fill out the form below:</h3>

<%= form_for [@user, @product] do |f| %>
 <%= f.label :title %>
 <%= f.text_field :title %>
<br><br>
	<%= f.label :deadline %>
	<%= f.datetime_local_field :deadline %>
<br><br>
	<%= f.label :description %>
	<%= f.text_area :description %>
<br><br>
	<%= f.submit %><br>
	<%= link_to("Cancel", user_path(@user.id)) %>
	<%= link_to("Home", "/") %>
<% end %>

