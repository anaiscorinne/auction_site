<h1>Welcome to <%= @user.name %>'s Products' Page</h1>
<ul>
	<% @products.each do |product| %>
		<li>
			<h4><%= link_to("#{product.title}", user_product_path(@user, product.id)) %> | <%= product.deadline %></h4>
		</li>
	<% end %>
</ul>
<p><%= link_to("Back to my profile", user_path(@user.id)) %></p>
